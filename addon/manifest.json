{
  "manifest_version": 3,
  "name": "AI Social Media Assistant",
  "description": "An AI-powered service to 10x enhance your networking building on Twitter",
  "version": "1.1",
  "externally_connectable": {
    "ids": ["aoanplmcijnbbcnnllmeagbkdhkkdkep"],
    "matches": ["*://127.0.0.1/*", "*://aisma.wr.io/*"],
    "accepts_tls_channel_id": false
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "runtime.sendMessage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://127.0.0.1/*",
        "*://aisma.wr.io/*",
        "*://twitter.com/*"
      ],
      "js": ["content.js", "followers.js", "twitter_profile.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
     "16": "icon16.png",
     "32": "icon32.png",
     "48": "icon48.png",
     "128": "icon128.png"
   },
   "action": {
      "default_popup": "popup.html"
    }
}
