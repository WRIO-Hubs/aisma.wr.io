{
  "manifest_version": 3,
  "name": "AI SM Assistant",
  "version": "1.1",
  "externally_connectable": {
    "ids": ["aoanplmcijnbbcnnllmeagbkdhkkdkep"],
    "matches": ["*://127.0.0.1/*"]
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://127.0.0.1/*",
        "*://aisma.wr.io/*",
        "*://twitter.com/*"
      ],
      "js": ["content.js", "followers.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  }
}
